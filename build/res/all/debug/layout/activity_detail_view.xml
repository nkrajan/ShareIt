<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/detail_view_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/detail_view_detail_list_menu_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_view_title_bar"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/detail_view_detail_list_new_button"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/detail_list_menu_new_button"
            android:scaleType="fitXY"
            android:src="@drawable/new_button" />

        <TextView
            android:id="@+id/detail_view_menu_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/detail_list_menu_label"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:typeface="sans" />
    </RelativeLayout>

    <ListView
        android:id="@+id/detail_view_detail_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:divider="#B5B5B5"
        android:dividerHeight="1dp"
        android:listSelector="@drawable/list_selector" >
    </ListView>

</LinearLayout><!-- From: file:/Users/Gladeux/Work/Android/ShareIt/res/layout/activity_detail_view.xml -->