<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/activity_edit_detail_view_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/edit_detail_title_bar_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/topic_view_title_bar" >

        <EditText
            android:id="@+id/edit_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:ems="10"
            android:hint="@string/new_detail_label_hint"
            android:inputType="text"
            android:maxLength="20"
            android:maxLines="1"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textStyle="bold" >

            <requestFocus />
        </EditText>

        <ImageView
            android:id="@+id/edit_detail_ok_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/new_category_ok_button"
            android:scaleType="fitXY"
            android:src="@drawable/ok_button" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_detail_description"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:hint="@string/new_detail_label_hint"
        android:inputType="textMultiLine"
        android:padding="15dp"
        android:scrollbarStyle="insideInset"
        android:scrollbars="vertical"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" />
</LinearLayout>